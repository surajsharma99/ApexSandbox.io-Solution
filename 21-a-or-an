public String aOrAn(String word) {
    String str;
    for(Integer i = 0; i < word.length() ; i++)
    {
        if(word.startsWithIgnoreCase('a') || word.startsWithIgnoreCase('e') || 
                word.startsWithIgnoreCase('i') || word.startsWithIgnoreCase('o') 
                || word.startsWithIgnoreCase('u'))
        {
            str = 'an '+ word;
            return str;
        }else{
            str = 'a '+ word;
            return str;
        }
    }
    return str;
}